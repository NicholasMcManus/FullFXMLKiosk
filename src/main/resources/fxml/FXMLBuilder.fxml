<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.psu.bw.fxmlkioskmaven.controller.FXMLBuilderController">
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="displayTable" focusTraversable="false" layoutX="50.0" layoutY="9.0" prefHeight="325.0" prefWidth="500.0" />
         </children>
      </Pane>
   </center>
   <bottom>
      <Button fx:id="btnCheckout" mnemonicParsing="false" onAction="#handleCheckout" style="-fx-background-color: #66FF77;" text="Checkout" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin></Button>
   </bottom>
   <top>
      <HBox alignment="TOP_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblWelcome" text="Welcome!">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Region prefHeight="27.0" prefWidth="200.0" />
            <Button fx:id="btnAdmin" mnemonicParsing="false" onAction="#handleAdminButton" text="Administration">
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
               </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleLoginButton" text="Login">
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
               </padding>
            </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
